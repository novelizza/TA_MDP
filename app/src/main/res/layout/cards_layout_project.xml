<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_project"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="8dp"
        card_view:cardBackgroundColor="@color/colorCloud1"
        card_view:cardCornerRadius="7dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvProjectList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    tools:text="Project Name"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvProjectDetailList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Project Detail"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_lang"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        tools:text="Java"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvLang"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Update on "
                        android:textSize="13sp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="20 Oct 2020"
                        android:textSize="13sp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tvDate"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>